{
  "name": "@shower/material",
  "description": "Material theme for Shower HTML presentation engine",
  "version": "2.2.1",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Vadim Makeev",
    "url": "https://pepelsbey.net/"
  },
  "homepage": "https://github.com/shower/material",
  "repository": {
    "type": "git",
    "url": "git://github.com/shower/material.git"
  },
  "bugs": {
    "url": "https://github.com/shower/material/issues"
  },
  "license": "MIT",
  "keywords": [
    "shower",
    "presentation",
    "material",
    "theme"
  ],
  "files": [
    "fonts/**",
    "pictures/**",
    "styles/**",
    "index.html",
    "LICENSE.md",
    "README.md"
  ],
  "devDependencies": {
    "live-server": "^1.2.1",
    "shower-core": "^2.1.0",
    "stylelint": "^9.10.1"
  },
  "scripts": {
    "test": "stylelint 'styles/**/*.css'",
    "start": "live-server . --watch='fonts/*,pictures/*,styles/**,index.html'",
    "prepare-files": "rsync -a lib fonts pictures styles prepared/",
    "prepare-showerjs": "rsync -a node_modules/shower-core/shower.min.js prepared/lib/",
    "prepare-html": "sed 's#node_modules/shower-core/shower\\.min\\.js#lib/shower.min.js#' index.html > prepared/index.html",
    "prepare": "npm run prepare-files && npm run prepare-showerjs && npm run prepare-html",
    "publish": "npm run prepare && gh-pages.js -d prepared -m 'Upload slides'"
  },
  "dependencies": {
    "gh-pages": "^2.0.1"
  }
}
